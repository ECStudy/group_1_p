{
    "name": "tab-group-bookmark",
    "displayName": "Tab Group Bookmark",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.94.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "tab-group-bookmark",
                    "title": "Package Explorer",
                    "icon": "images/my-icon.svg"
                }
            ]
        },
        "views": {
            "tab-group-bookmark": [
                {
                    "id": "tabview",
                    "name": "tab",
                    "type": "tree",
                    "contextualTitle": "tab"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "create.group",
                    "when": "view == tabview",
                    "group": "navigation"
                },
                {
                    "command": "delete.group.all",
                    "when": "view == tabview",
                    "group": "navigation"
                },
                {
                    "command": "view.fold-unfold",
                    "when": "view == tabview",
                    "group": "navigation"
                },
                {
                    "command": "global.state.reset",
                    "when": "view == tabview",
                    "group": "inline"
                },
                {
                    "command": "option1",
                    "when": "view == tabview",
                    "group": "inline"
                },
                {
                    "command": "viewDescription",
                    "when": "view == tabview",
                    "group": "inline"
                }
            ],
            "explorer/context": [
                {
                    "command": "create.tab.new-group",
                    "group": "navigation"
                },
                {
                    "command": "create.tab.prev-group",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "create.group.in-group",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "update.group.label",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "delete.group",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "open.group",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "delete.tab",
                    "when": "viewItem == tab",
                    "group": "inline"
                },
                {
                    "command": "update.group.color",
                    "when": "viewItem == group",
                    "group": "navigation"
                },
                {
                    "command": "update.tab.label",
                    "when": "viewItem == tab",
                    "group": "navigation"
                },
                {
                    "command": "update.tab.description",
                    "when": "viewItem == tab",
                    "group": "navigation"
                },
                {
                    "command": "update.group.description",
                    "when": "viewItem == group",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "command": "create.tab.new-group",
                    "group": "navigation"
                },
                {
                    "command": "create.tab.prev-group",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "create.group",
                "title": "Create Group",
                "icon": "$(add)"
            },
            {
                "command": "create.tab.new-group",
                "title": "새 그룹에 추가",
                "category": "tab"
            },
            {
                "command": "create.tab.prev-group",
                "title": "기존 그룹에 추가",
                "category": "tab"
            },
            {
                "command": "delete.group.all",
                "title": "Delete All Group",
                "icon": "$(trash)"
            },
            {
                "command": "create.group.in-group",
                "title": "Create Group In Group",
                "icon": "$(add)"
            },
            {
                "command": "update.group.label",
                "title": "Update Group Label",
                "icon": "$(edit)"
            },
            {
                "command": "delete.group",
                "title": "Delete Group",
                "icon": "$(trash)"
            },
            {
                "command": "delete.tab",
                "title": "Delete Tab",
                "icon": "$(trash)"
            },
            {
                "command": "open.group",
                "title": "Open Group In Tabs",
                "icon": "$(eye)"
            },
            {
                "command": "update.group.color",
                "title": "그룹 아이콘 변경",
                "category": "tab"
            },
            {
                "command": "view.fold-unfold",
                "title": "Fold All Group",
                "icon": "$(map)"
            },
            {
                "command": "global.state.reset",
                "title": "Reset Global State",
                "icon": "$(debug-restart)"
            },
            {
                "command": "option1",
                "title": "옵션1"
            },
            {
                "command": "viewDescription",
                "title": "주석 보이기 / 숨기기"
            },
            {
                "command": "update.tab.label",
                "title": "라벨 이름 변경",
                "category": "tab"
            },
            {
                "command": "update.tab.description",
                "title": "주석 추가",
                "category": "tab"
            },
            {
                "command": "update.group.description",
                "title": "주석 추가",
                "category": "group"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Tab and Bookmark",
            "properties": {
                "openFilesAtStartup": {
                    "type": "array",
                    "description": "List of file paths to open when the workspace starts.",
                    "default": []
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.2.2",
        "@types/mocha": "^10.0.8",
        "@types/node": "20.x",
        "@types/vscode": "^1.94.0",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.11.1",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "crypto-js": "^4.2.0",
        "nanoid": "^5.0.9",
        "uuid": "^11.0.3"
    }
}
