{
    "name": "tab-group-bookmark",
    "displayName": "Tab Group Bookmark",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.94.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "tab-group-bookmark",
                    "title": "Package Explorer",
                    "icon": "images/my-icon.svg"
                }
            ]
        },
        "views": {
            "tab-group-bookmark": [
                {
                    "id": "tabview",
                    "name": "tab",
                    "type": "tree",
                    "contextualTitle": "tab"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "create.group",
                    "when": "view == tabview",
                    "group": "navigation"
                },
                {
                    "command": "delete.all",
                    "when": "view == tabview",
                    "group": "navigation"
                },
                {
                    "command": "myext.group.fold",
                    "when": "view == tabview && !myext:group.fold",
                    "group": "mygr@1"
                },
                {
                    "command": "myext.group.unfold",
                    "when": "view == tabview && myext:group.fold",
                    "group": "mygr@1"
                },
                {
                    "command": "myext.show.description",
                    "when": "view == tabview && !myext:show.description",
                    "group": "mygr@2"
                },
                {
                    "command": "myext.hide.description",
                    "when": "view == tabview && myext:show.description",
                    "group": "mygr@2"
                },
                {
                    "command": "myext.show.alias",
                    "when": "view == tabview && !myext:show.alias",
                    "group": "mygr@3"
                },
                {
                    "command": "myext.hide.alias",
                    "when": "view == tabview && myext:show.alias",
                    "group": "mygr@3"
                },
                {
                    "command": "global.state.reset",
                    "when": "view == tabview",
                    "group": "mygr@10"
                }
            ],
            "explorer/context": [
                {
                    "command": "create.group.tab",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "create.group.group",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "delete.group",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "open.group",
                    "when": "viewItem == group",
                    "group": "inline"
                },
                {
                    "command": "delete.tab",
                    "when": "viewItem == tab",
                    "group": "inline"
                },
                {
                    "command": "update.group.color",
                    "when": "viewItem == group",
                    "group": "navigation"
                },
                {
                    "command": "update.group.label",
                    "when": "viewItem == group",
                    "group": "navigation"
                },
                {
                    "command": "update.tab.label",
                    "when": "viewItem == tab",
                    "group": "navigation"
                },
                {
                    "command": "update.tab.description",
                    "when": "viewItem == tab",
                    "group": "navigation"
                },
                {
                    "command": "update.group.description",
                    "when": "viewItem == group",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "command": "create.group.tab",
                    "group": "navigation"
                }
            ]
        },
        "commands": [
            {
                "command": "create.group",
                "title": "Create Group",
                "icon": "$(add)"
            },
            {
                "command": "create.group.tab",
                "title": "GroupTab: Add Tab",
                "category": "tab"
            },
            {
                "command": "delete.all",
                "title": "Delete All Groups",
                "icon": "$(trash)"
            },
            {
                "command": "create.group.group",
                "title": "Create Group Inside Another Group",
                "icon": "$(add)"
            },
            {
                "command": "delete.group",
                "title": "Delete Group",
                "icon": "$(trash)"
            },
            {
                "command": "delete.tab",
                "title": "Delete Tab",
                "icon": "$(trash)"
            },
            {
                "command": "open.group",
                "title": "Open Group In Tabs",
                "icon": "$(eye)"
            },
            {
                "command": "update.group.color",
                "title": "Change Group Icon",
                "category": "tab"
            },
            {
                "command": "update.group.label",
                "title": "Change Group Name",
                "category": "tab"
            },
            {
                "command": "global.state.reset",
                "title": "Extension Reset",
                "icon": "$(debug-restart)"
            },
            {
                "command": "myext.show.description",
                "title": "Show/Hide Description"
            },
            {
                "command": "myext.hide.description",
                "title": "Show/Hide Description"
            },
            {
                "command": "myext.show.alias",
                "title": "Show/Hide Alias"
            },
            {
                "command": "myext.hide.alias",
                "title": "Show/Hide Alias"
            },
            {
                "command": "myext.group.fold",
                "title": "Fold/Unfold Group"
            },
            {
                "command": "myext.group.unfold",
                "title": "Fold/Unfold Group"
            },
            {
                "command": "update.tab.label",
                "title": "Change Tab Name",
                "category": "tab"
            },
            {
                "command": "update.tab.description",
                "title": "Add Tab Description",
                "category": "tab"
            },
            {
                "command": "update.group.description",
                "title": "Add Group Description",
                "category": "group"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Tab and Bookmark",
            "properties": {
                "openFilesAtStartup": {
                    "type": "array",
                    "description": "List of file paths to open when the workspace starts.",
                    "default": []
                }
            }
        },
        "keybindings": [
            {
                "command": "create.group.tab",
                "key": "ctrl+alt+g",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/crypto-js": "^4.2.2",
        "@types/mocha": "^10.0.8",
        "@types/node": "20.x",
        "@types/vscode": "^1.94.0",
        "@typescript-eslint/eslint-plugin": "^8.7.0",
        "@typescript-eslint/parser": "^8.7.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.11.1",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "crypto-js": "^4.2.0",
        "nanoid": "^5.0.9",
        "uuid": "^11.0.3"
    }
}
